---
import Layout from "../layouts/Layout.astro";
import JoinUs from "../components/JoinUs.astro";
const title: string= "Travel Platform -  Our News";
const description: string= "Stay updated with the latest travel news and updates.";
import { Image } from 'astro:assets';
import image1 from '/src/assets/new/new2.png';
import image2 from  '/src/assets/testi/testi1.png'



const newsArticles = [
  {
    title: "New Direct Flights to Popular Tourist Destinations",
    date: "March 15, 2024",
    category: "Travel Updates",
    image: image1,
    excerpt:
      "Exciting new flight routes connecting major cities launching this summer.",
    author: "John Smith",
    readTime: "5 min read",
  },
  {
    title: "Dubai Tourism Hits Record High in 2024",
    date: "March 12, 2024",
    category: "Tourism",
    image: image1,
    excerpt:
      "Tourist numbers exceed expectations in the first quarter of 2024.",
    author: "Sarah Johnson",
    readTime: "4 min read",
  },
  {
    title: "New Visa Regulations for International Travelers",
    date: "March 10, 2024",
    category: "Travel Policy",
    image: image1,  
    excerpt:
      "Important updates to visa requirements for multiple destinations.",
    author: "Michael Brown",
    readTime: "6 min read",
  },
];
---

<head>
  <title>{title}</title>
  <meta
    name="description"
    content="Stay updated with the latest travel news and updates."
  />
  <meta property="og:title" content="Travel Platform - Latest Travel News" />
  <meta
    property="og:description"
    content="Stay updated with the latest travel news and updates."
  />
  <meta name="twitter:card" content="summary_large_image" />
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "NewsArticle",
      "headline": "Latest Travel News",
      "image": [image1],
      "datePublished": "2024-03-15",
      "author": {
        "@type": "Person",
        "name": "John Smith"
      },
      "publisher": {
        "@type": "Organization",
        "name": "Travel Platform",
        "logo": {
          "@type": "ImageObject",
          "url": "/src/assets/logo.png" 
        }
      },
      "description": "Stay updated with the latest travel news and updates."
    }
  </script>
</head>

<Layout title={title} description={description}>
  <!-- Hero Section with Parallax (Keeping this part) -->
  <div
    class="relative h-[60vh] sm:h-[50vh] md:h-[60vh] bg-gradient-to-r from-blue-900 via-purple-900 to-blue-900 overflow-hidden"
  >
    <div
      class="absolute inset-0 transform-gpu"
      style="transform: translateY(var(--scrollY))"
    >
      <div
        class="absolute inset-0 bg-gradient-to-b from-transparent to-black/70"
      >
      </div>
      <img
        class="w-full h-full object-cover opacity-40 scale-110"
        src={image1.src}
        alt="Services Hero"
      />
    </div>
    <div class="relative h-full flex items-center justify-center">
      <div class="text-center space-y-6 px-4 sm:px-6 lg:px-8">
        <h1
          class="text-3xl sm:text-5xl md:text-7xl font-black text-white tracking-tight animate-fade-in"
        >
          Our <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400"
            >News</span
          >
        </h1>
        <p
          class="text-lg sm:text-xl md:text-2xl text-gray-200 max-w-3xl mx-auto animate-fade-in-up"
        >
          Stay updated with the latest travel news and updates
        </p>
      </div>
    </div>
  </div>

  <!-- News Grid Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 gap-8">
      {
        newsArticles.map((article) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden flex hover:shadow-xl transition-shadow duration-300">
            <img
              src={article.image.src}
              alt={article.title}
              class="w-1/3 object-cover"
            />
            <div class="p-6 flex-1">
              <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded">
                {article.category}
              </span>
              <h3 class="text-xl font-bold mt-2">{article.title}</h3>
              <p class="text-gray-600 mt-2">{article.excerpt}</p>
              <div class="mt-4 flex items-center justify-between">
                <div class="flex items-center">
                  <img
                    src={image2.src}
                    alt={article.author}
                    class="w-8 h-8 rounded-full"
                  />
                  <span class="ml-2 text-sm text-gray-600">
                    {article.author}
                  </span>
                </div>
                <span class="text-sm text-gray-500">{article.readTime}</span>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <JoinUs />
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }
</style>
