---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Visionmission from "../components/visionmission.astro";
import image1 from "/src/assets/about/about1.png";
import image2 from "/src/assets/about/header.webp";
import Faq, { faqs } from "../components/Faq.astro";

// Enhanced SEO for UAE/Dubai/Middle East targeting
const title = "About Travel Platform UAE | Leading Travel Agency in Dubai since 2020";
const description =
  "Learn about Travel Platform UAE - Dubai's premier travel agency serving Middle Eastern travelers since 2020. Our mission, vision, and commitment to providing exceptional travel services in UAE, Saudi Arabia, Qatar, Kuwait, Oman, and Bahrain. Expert team, local knowledge, competitive rates.";
const ogUrl = "https://travelplatformuae.com/about-us";

// Comprehensive structured data with UAE/Dubai/Middle East focus
const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "AboutPage",
      "@id": `${ogUrl}#webpage`,
      url: ogUrl,
      name: title,
      description: description,
      inLanguage: "en-AE",
      isPartOf: {
        "@type": "WebSite",
        "@id": "https://travelplatformuae.com/#website"
      },
      about: {
        "@type": "TravelAgency",
        "@id": "https://travelplatformuae.com/#organization"
      },
      breadcrumb: {
        "@type": "BreadcrumbList",
        itemListElement: [
          {
            "@type": "ListItem",
            position: 1,
            name: "Home",
            item: "https://travelplatformuae.com"
          },
          {
            "@type": "ListItem",
            position: 2,
            name: "About Us",
            item: ogUrl
          }
        ]
      },
      mainEntity: {
        "@type": "TravelAgency",
        "@id": "https://travelplatformuae.com/#organization",
        name: "Travel Platform UAE",
        alternateName: ["Travel Platform Dubai", "Best Travel Agency Dubai"],
        description: "Premier travel agency in Dubai, UAE serving Middle Eastern travelers since 2020. Specializing in international and domestic tour packages, visa services, and comprehensive travel solutions for UAE, Saudi Arabia, Qatar, Kuwait, Oman, and Bahrain residents.",
        url: "https://travelplatformuae.com",
        email: "info@travelplatformuae.com",
        telephone: "+971522345572",
        foundingDate: "2020",
        foundingLocation: {
          "@type": "Place",
          name: "Dubai, United Arab Emirates"
        },
        logo: {
          "@type": "ImageObject",
          url: "https://travelplatformuae.com/logo.png",
          width: 300,
          height: 60,
        },
        image: {
          "@type": "ImageObject",
          url: `https://travelplatformuae.com${image2.src}`,
          width: 800,
          height: 500,
        },
        address: {
          "@type": "PostalAddress",
          streetAddress: "Al Muhaisnah 2",
          addressLocality: "Dubai",
          addressRegion: "Dubai",
          postalCode: "00000",
          addressCountry: "AE"
        },
        geo: {
          "@type": "GeoCoordinates",
          latitude: "25.2048",
          longitude: "55.2708"
        },
        areaServed: [
          {
            "@type": "Country",
            name: "United Arab Emirates"
          },
          {
            "@type": "Country",
            name: "Saudi Arabia"
          },
          {
            "@type": "Country",
            name: "Qatar"
          },
          {
            "@type": "Country",
            name: "Kuwait"
          },
          {
            "@type": "Country",
            name: "Oman"
          },
          {
            "@type": "Country",
            name: "Bahrain"
          }
        ],
        sameAs: [
          "https://www.facebook.com/travellplatformuae",
          "https://www.instagram.com/travelplatformuae/"
        ],
        numberOfEmployees: {
          "@type": "QuantitativeValue",
          value: "50+"
        },
        slogan: "Your Gateway to the World from Dubai",
        mission: "To provide exceptional travel experiences with personalized service, competitive rates, and deep understanding of Middle Eastern cultural preferences",
        foundingPrinciples: [
          "Customer-first approach",
          "Cultural sensitivity",
          "Transparent pricing",
          "Expert local knowledge",
          "24/7 support"
        ],
        serviceArea: {
          "@type": "GeoCircle",
          geoMidpoint: {
            "@type": "GeoCoordinates",
            latitude: "25.2048",
            longitude: "55.2708"
          },
          geoRadius: "100000"
        },
        hasOfferCatalog: {
          "@type": "OfferCatalog",
          name: "Dubai Travel Services",
          description: "Comprehensive travel solutions for Middle Eastern travelers",
          itemListElement: [
            {
              "@type": "Offer",
              name: "International Tour Packages",
              description: "Premium tour packages to destinations worldwide from Dubai"
            },
            {
              "@type": "Offer",
              name: "UAE Visa Services",
              description: "Complete visa assistance for UAE tourist and business visas"
            },
            {
              "@type": "Offer",
              name: "Flight & Hotel Bookings",
              description: "Professional booking services with competitive rates"
            }
          ]
        },
        aggregateRating: {
          "@type": "AggregateRating",
          ratingValue: "4.8",
          reviewCount: "150",
          bestRating: "5",
          worstRating: "1"
        },
        award: [
          "Top 10 Travel Agencies in Dubai",
          "Middle East Travel Excellence Award",
          "Customer Choice Award UAE"
        ],
        member0f: [
          "Dubai Chamber of Commerce",
          "UAE Travel Agents Association",
          "International Air Transport Association (IATA)"
        ]
      }
    },
    {
      "@type": "FAQPage",
      "@id": `${ogUrl}#faq`,
      mainEntity: faqs.map(faq => ({
        "@type": "Question",
        name: faq.heading,
        acceptedAnswer: {
          "@type": "Answer",
          text: faq.content
        }
      })).concat([
        {
          "@type": "Question",
          name: "Why should I choose Travel Platform UAE over other Dubai travel agencies?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Travel Platform UAE stands out with our deep understanding of Middle Eastern cultural preferences, competitive pricing, 24/7 Arabic and English support, and specialized services for UAE and GCC residents. Our Dubai-based team provides personalized attention and local expertise."
          }
        },
        {
          "@type": "Question",
          name: "Do you serve clients from other Middle Eastern countries?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Yes, we proudly serve clients from Saudi Arabia, Qatar, Kuwait, Oman, and Bahrain. Our services are designed with Middle Eastern travelers in mind, including cultural considerations, halal meal options, and prayer time accommodations."
          }
        },
        {
          "@type": "Question",
          name: "What makes Travel Platform UAE different from Indian travel agencies?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Unlike Indian travel agencies, we are based in Dubai with deep local UAE knowledge, understanding of Middle Eastern preferences, and specialized services for GCC residents. We offer competitive local rates, Arabic language support, and cultural sensitivity in our travel planning."
          }
        }
      ])
    },
    {
      "@type": "Organization",
      "@id": "https://travelplatformuae.com/#organization",
      name: "Travel Platform UAE",
      description: "Leading travel agency in Dubai, UAE specializing in travel services for Middle Eastern clients",
      url: "https://travelplatformuae.com",
      logo: "https://travelplatformuae.com/logo.png",
      contactPoint: {
        "@type": "ContactPoint",
        telephone: "+971522345572",
        contactType: "customer service",
        areaServed: ["AE", "SA", "QA", "KW", "OM", "BH"],
        availableLanguage: ["English", "Arabic"]
      }
    }
  ]
};
---

<Layout
  title={title}
  description={description}
  ogUrl={ogUrl}
  travelplatformuae={structuredData}
>
<div
class="relative h-[35vh] sm:h-[45vh] md:h-[60vh] lg:h-[60vh] bg-gradient-to-r from-blue-900 via-purple-900 to-blue-900 overflow-hidden hero-banner"
>
<div
  class="absolute inset-0 transform-gpu"
  style="transform: translateY(var(--scrollY))"
>
  <div
    class="absolute inset-0 bg-gradient-to-b from-transparent to-black/70"
  >
  </div>
  <img
    class="w-full h-full object-cover opacity-40 scale-110"
    src={image1.src}
    alt="About Us"
  />
</div>
<div class="relative h-full flex items-center justify-center py-12">
  <div class="text-center space-y-4 px-4 sm:px-6 lg:px-8">
    <h1
      class="text-4xl sm:text-5xl md:text-7xl font-black text-white tracking-tight animate-fade-in pt-8 sm:pt-0"
    >
      About <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400"
        >Us</span
      >
    </h1>
    <p
      class="text-xl sm:text-xl md:text-2xl text-gray-200 max-w-3xl mx-auto animate-fade-in-up"
    >
      Innovative solutions for modern travel challenges
    </p>
  </div>
</div>
</div>
<Header />
<Visionmission />
<!-- Additional company info section -->
<section class="py-16 bg-gray-50">
<div class="container mx-auto px-4">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-800 mb-4">Why Travel Platform UAE?</h2>
      <p class="text-xl text-gray-600">
        Your trusted travel partner in the heart of Dubai, serving Middle Eastern travelers with excellence
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      <div class="bg-white rounded-xl p-6 shadow-lg text-center">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-800 mb-2">Dubai Based</h3>
        <p class="text-gray-600">Located in the heart of Dubai with deep local knowledge and UAE market expertise</p>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-lg text-center">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-800 mb-2">Middle East Focus</h3>
        <p class="text-gray-600">Specialized services for UAE, Saudi Arabia, Qatar, Kuwait, Oman, and Bahrain travelers</p>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-lg text-center">
        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-800 mb-2">24/7 Support</h3>
        <p class="text-gray-600">Round-the-clock assistance in Arabic and English with dedicated customer service</p>
      </div>
    </div>

    <div class="bg-blue-50 rounded-2xl p-8">
      <h3 class="text-2xl font-bold text-center text-gray-800 mb-6">Our Achievements</h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 text-center">
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">4.8/5</div>
          <div class="text-gray-600">Customer Rating</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-green-600 mb-2">1000+</div>
          <div class="text-gray-600">Happy Travelers</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-purple-600 mb-2">50+</div>
          <div class="text-gray-600">Expert Team</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-yellow-600 mb-2">6</div>
          <div class="text-gray-600">Countries Served</div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
<Faq />
</Layout>
<style>
@media only screen and (min-width: 768px) and (max-width: 1024px),
only screen and (min-width: 834px) and (max-width: 1194px) {
.hero-banner {
  height: 35vh !important;
}
}
</style>
