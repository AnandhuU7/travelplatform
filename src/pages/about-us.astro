---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Visionmission from "../components/visionmission.astro";
import JoinUs from "../components/JoinUs.astro";
import image1 from "/src/assets/about/about1.png";
import Faq from "../components/Faq.astro";
import logo from "/src/assets/logo.png";

const title = "About Us - Your Trusted Travel Partner";
const description =
  "Discover our mission to provide seamless and unforgettable travel experiences. Learn about our vision, values, and dedication to customer satisfaction.";
const structuredData = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  headline: "About Us - Your Trusted Travel Partner",
  description:
    "Discover our mission to provide seamless and unforgettable travel experiences. Learn about our vision, values, and dedication to customer satisfaction.",
  url: "https://travelplatformuae.com/about-us",
  image: "https://travelplatformuae.com/about1.png",
  mainEntity: {
    "@type": "Organization",
    "@id": "https://travelplatformuae.com/#organization",
    name: "Travel Platform UAE",
    description:
      "Award-winning travel service provider offering tour packages, booking assistance, and custom travel solutions since 2014.",
    logo: {
      "@type": "ImageObject",
      url: "https://travelplatformuae.com/logo.png",
      width: "300",
      height: "60",
    },
    foundingDate: "2014",
    knowsAbout: [
      "Travel Planning",
      "Luxury Tours",
      "Adventure Travel",
      "Corporate Travel",
      "Group Travel",
      "Family Travel",
      "Couple Travel",
      "Solo Travel",
      "Last Minute Travel",
      "Travel Packages",
      "Travel Deals",
      "Travel Discounts",
      "Travel Offers",
      "Travel News",
      "Travel Events",
    ],
    missionStatement:
      "To deliver seamless and unforgettable travel experiences through innovation and personalized service.",
    address: {
      "@type": "PostalAddress",
      streetAddress: "Al Muhaisnah 2, Dubai",
      addressLocality: "Dubai",
      addressRegion: "UAE",
      postalCode: "232424",
      addressCountry: "UAE",
    },
    sameAs: [
      "https://www.facebook.com/travellplatformuae",
      "https://www.instagram.com/travelplatformuae/",
    ],
  },
  breadcrumb: {
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        item: {
          "@id": "https://travelplatformuae.com",
          name: "Home",
        },
      },
      {
        "@type": "ListItem",
        position: 2,
        item: {
          "@id": "https://travelplatformuae.com/about-us",
          name: "About Us",
        },
      },
    ],
  },
};
---

<Layout title={title} description={description} structuredData={structuredData}>
  <div
    class="relative h-[35vh] sm:h-[45vh] md:h-[60vh] lg:h-[60vh] bg-gradient-to-r from-blue-900 via-purple-900 to-blue-900 overflow-hidden hero-banner"
  >
    <div
      class="absolute inset-0 transform-gpu"
      style="transform: translateY(var(--scrollY))"
    >
      <div
        class="absolute inset-0 bg-gradient-to-b from-transparent to-black/70"
      >
      </div>
      <img
        class="w-full h-full object-cover opacity-40 scale-110"
        src={image1.src}
        alt="About Us"
      />
    </div>
    <div class="relative h-full flex items-center justify-center py-12">
      <div class="text-center space-y-4 px-4 sm:px-6 lg:px-8">
        <h1
          class="text-4xl sm:text-5xl md:text-7xl font-black text-white tracking-tight animate-fade-in pt-8 sm:pt-0"
        >
          About <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400"
            >Us</span
          >
        </h1>
        <p
          class="text-xl sm:text-xl md:text-2xl text-gray-200 max-w-3xl mx-auto animate-fade-in-up"
        >
          Innovative solutions for modern travel challenges
        </p>
      </div>
    </div>
  </div>
  <Header />
  <Visionmission />
  <Faq />
</Layout>
<style>
  @media only screen and (min-width: 768px) and (max-width: 1024px),
    only screen and (min-width: 834px) and (max-width: 1194px) {
    .hero-banner {
      height: 35vh !important;
    }
  }
</style>
