---
import Layout from "../layouts/Layout.astro";
import logo from "/src/assets/logo.png"; 
import banner from "/src/assets/about/about1.png";

const title: string = "Privacy Policy | Travel Platform UAE";
const description: string =
  "This is the privacy policy page for Travel Platform UAE. Learn how we collect, use, and protect your personal information.";

const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${Astro.url.origin}/#organization`,
      name: "Travel Platform UAE",
      url: Astro.url.origin,
      logo: logo.src, 
      contactPoint: {
        "@type": "ContactPoint",
        telephone: "+971 52 2345 572",
        contactType: "Customer Service",
        areaServed: "AE",
        availableLanguage: "English",
      },
      address: {
        "@type": "PostalAddress",
        streetAddress: "Al Muhaisnah 2, Dubai",
        addressLocality: "Dubai",
        addressCountry: "UAE",
      },
    },
    {
      "@type": "WebPage",
      "@id": `${Astro.url.origin}/privacy-policy/#webpage`,
      url: `${Astro.url.origin}/privacy-policy/`,
      name: title,
      description: description,
      inLanguage: "en-US",
      isPartOf: {
        "@id": `${Astro.url.origin}/#website`,
      },
      datePublished: "2024-02-05T11:26:39+00:00",
      dateModified: "2025-01-26T19:17:19+00:00",
      primaryImageOfPage: {
        "@id": `${logo.src}`,
      },
    },
    {
      "@type": "BreadcrumbList",
      "@id": `${Astro.url.origin}/privacy-policy/#breadcrumb`,
      itemListElement: [
        {
          "@type": "ListItem",
          position: 1,
          item: {
            "@id": `${Astro.url.origin}/`,
            name: "Home",
          },
        },
        {
          "@type": "ListItem",
          position: 2,
          item: {
            "@id": `${Astro.url.origin}/privacy-policy/`,
            name: "Privacy Policy",
          },
        },
      ],
    },
    {
      "@type": "FAQPage",
      mainEntity: [
        {
          "@type": "Question",
          name: "What information do you collect?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "We collect personal information such as your name, email address, and payment details when you use our services.",
          },
        },
        {
          "@type": "Question",
          name: "How do you use my information?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "We use your personal information to provide and improve our services, process transactions, and communicate with you about your bookings and inquiries.",
          },
        },
        {
          "@type": "Question",
          name: "Do you share my information with third parties?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "We do not share your personal information with third parties except as necessary to provide our services, comply with legal obligations, or protect our rights.",
          },
        },
        {
          "@type": "Question",
          name: "How do you protect my data?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "We implement appropriate security measures to protect your personal information from unauthorized access, disclosure, alteration, or destruction.",
          },
        },
      ],
    },
  ],
};
---
<Layout title={title} description={description} structuredData={structuredData}>
   <!-- Hero Section with Parallax -->
   <div
   class="relative h-[60vh] sm:h-[50vh] md:h-[60vh] bg-gradient-to-r from-blue-900 via-purple-900 to-blue-900 overflow-hidden"
 >
   <div
     class="absolute inset-0 transform-gpu"
     style="transform: translateY(var(--scrollY))"
   >
     <div
       class="absolute inset-0 bg-gradient-to-b from-transparent to-black/70"
     >
     </div>
     <img
       class="w-full h-full object-cover opacity-40 scale-110"
       src={banner.src}
       alt="Services Hero"
     />
   </div>
   <div class="relative h-full flex items-center justify-center">
     <div class="text-center space-y-6 px-4 sm:px-6 lg:px-8">
       <h1
         class="text-3xl sm:text-5xl md:text-7xl font-black text-white tracking-tight animate-fade-in"
       >
       Privacy and  <span
           class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400"
           >Policy</span
         >
       </h1>
       <p
         class="text-lg sm:text-xl md:text-2xl text-gray-200 max-w-3xl mx-auto animate-fade-in-up"
       >
       Safeguarding your data with unparalleled security measures
       </p>
     </div>
   </div>
 </div>
  <section class="py-10 sm:py-20 bg-white mt-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden p-8 sm:p-10 md:p-12 relative">
        <div class="absolute top-4 right-4 flex space-x-2">
          <svg class="w-6 h-6 text-red-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          <svg class="w-6 h-6 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        </div>
        <h1 class="text-4xl font-extrabold text-gray-900 mb-8 text-center">Privacy <span class="text-yellow-500">Policy</span></h1>
        <p class="text-gray-700 mb-6 text-lg leading-relaxed">
          Your privacy is important to us. This privacy policy explains how we collect, use, and protect your personal information:
        </p>
        <div class="space-y-8">
          <div>
            <h2 class="text-3xl font-semibold text-gray-900 mb-4">1. Information Collection</h2>
            <p class="text-gray-700 text-lg leading-relaxed">
              We collect personal information that you provide to us when you use our services, such as your name, email address, and payment details.
            </p>
          </div>
          <div>
            <h2 class="text-3xl font-semibold text-gray-900 mb-4">2. Use of Information</h2>
            <p class="text-gray-700 text-lg leading-relaxed">
              We use your personal information to provide and improve our services, process transactions, and communicate with you about your bookings and inquiries.
            </p>
          </div>
          <div>
            <h2 class="text-3xl font-semibold text-gray-900 mb-4">3. Information Sharing</h2>
            <p class="text-gray-700 text-lg leading-relaxed">
              We do not share your personal information with third parties except as necessary to provide our services, comply with legal obligations, or protect our rights.
            </p>
          </div>
          <div>
            <h2 class="text-3xl font-semibold text-gray-900 mb-4">4. Data Security</h2>
            <p class="text-gray-700 text-lg leading-relaxed">
              We implement appropriate security measures to protect your personal information from unauthorized access, disclosure, alteration, or destruction.
            </p>
          </div>
          <!-- Add more sections as needed -->
        </div>
      </div>
    </div>
  </section>
</Layout>