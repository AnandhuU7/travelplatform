---
import Layout from "../../layouts/Layout.astro";
import JoinUs from "../../components/JoinUs.astro";
import { getCollection } from "astro:content";
import image2 from "/src/assets/testi/testi1.png";
import logo from "/src/assets/logo.png";
import banner from "/src/assets/about/about1.png";

const title = "Travel Platform - Our News";
const description = "Stay updated with the latest travel news and updates.";
const newsArticles = await getCollection("news");

// Structured Data remains the same as in the original file
const structuredData = {
  // ... (previous structured data code)
};
---
<Layout title={title} description={description} structuredData={structuredData}>
  <div class="relative h-[45vh] sm:h-[45vh] md:h-[60vh] bg-gradient-to-r from-blue-900 via-purple-900 to-blue-900 overflow-hidden">
    <div class="absolute inset-0 transform-gpu">
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-black/40 to-black/80"></div>
      <img 
        class="w-full h-full object-cover opacity-40" 
        src={banner.src} 
        alt="News" 
      />
    </div>
    <div class="relative h-full flex items-center justify-center">
      <div class="text-center space-y-8 px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
        <h1 class="text-4xl sm:text-6xl md:text-7xl font-black text-white tracking-tight">
          Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-purple-400 to-blue-300">News</span>
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-gray-100 max-w-3xl mx-auto font-light leading-relaxed">
          Stay updated with the latest travel news and updates
        </p>
      </div>
    </div>
  </div>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3  gap-8">
      {
        newsArticles.map((article, index) => (
          <div 
            class={`
              relative overflow-hidden rounded-2xl shadow-lg 
              transform transition-all duration-300 
              hover:shadow-2xl hover:-translate-y-4
              bg-white
              group
              animate-fade-in
              delay-${index * 100}
            `}
          >
            <div class="relative h-56 overflow-hidden">
              <img
                src={article.data.image.src}
                alt={article.data.title}
                class="w-full h-full object-cover"
              />
              <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4">
                <span class="bg-blue-500 text-white text-xs px-2 py-1 rounded-full">
                  {article.data.category}
                </span>
              </div>
            </div>
            
            <div class="p-6 space-y-4">
              <div class="flex justify-between items-center text-sm text-gray-500">
                <span>
                  {new Date(article.data.date).toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric'
                  })}
                </span>
                <div class="flex items-center space-x-2">
                  <img
                    src={image2.src}
                    alt={article.data.author}
                    class="w-8 h-8 rounded-full border-2 border-gray-200"
                  />
                  <span>{article.data.author}</span>
                </div>
              </div>
              
              <h3 class="text-xl font-bold text-gray-800 group-hover:text-blue-600 transition-colors">
                {article.data.title}
              </h3>
              
              <p class="text-gray-600 text-sm leading-relaxed line-clamp-3">
                {article.data.excerpt}
              </p>
              
              <div class="pt-4 border-t border-gray-200 mt-4">
                <a 
                  href={`/news/${article.slug}`}
                  class="
                    w-full block text-center
                    bg-blue-50 text-blue-600 
                    py-2 rounded-full 
                    hover:bg-blue-100 
                    transition-colors
                    font-medium
                  "
                >
                  Read More
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <JoinUs />
</Layout>

<style is:inline>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }
</style>