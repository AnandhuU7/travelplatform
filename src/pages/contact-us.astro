  mainEntity: {
    "@type": "Organization",
    name: "Travel Platform UAE",
    url: "https://travelplatformuae.com",
    logo: {
      "@type": "ImageObject",
      url: "https://www.travelplatformuae.com/logo.png",
      width: 300,
      height: 60,
    },
    contactPoint: [
      {
        "@type": "ContactPoint",
        telephone: "+971522345572",
        contactType: "customer service",
        email: "info@travelplatformuae.com",
        areaServed: ["UAE", "Dubai", "SA", "QA", "OM", "KW", "BH"],
        availableLanguage: ["English"],
        contactOption: "TollFree",
      },
      {
        "@type": "ContactPoint",
        contactType: "technical support",
        telephone: "0551328009",
        hoursAvailable: {
          "@type": "OpeningHoursSpecification",
          dayOfWeek: ["Mo", "Tu", "We", "Th", "Fr", "Sa"],
