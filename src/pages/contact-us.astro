    name: "Contact via WhatsApp",
    target: {
      "@type": "EntryPoint",
      urlTemplate: "https://wa.me/971522345572",
      actionPlatform: [
        "http://schema.org/DesktopWebPlatform",
        "http://schema.org/MobileWebPlatform",
      ],
    },
  },
  breadcrumbList: {
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        name: "Home",
        item: "https://travelplatformuae.com"
      },
      {
        "@type": "ListItem",
        position: 2,
        name: "Contact Us",
        item: "https://travelplatformuae.com/contact-us",
      },
    ]
  },
};
