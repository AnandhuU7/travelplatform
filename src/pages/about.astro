---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Visionmission from "../components/visionmission.astro";
import JoinUs from "../components/JoinUs.astro";
import image1 from '/src/assets/about/about1.png';
import logo from '/src/assets/logo.png';

const title = "About Us - Your Trusted Travel Partner";
const description = "Discover our mission to provide seamless and unforgettable travel experiences. Learn about our vision, values, and dedication to customer satisfaction.";

const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${Astro.url.origin}/#organization`,
      name: "Travel Platform UAE",
      url: Astro.url.origin,
      logo: logo.src,
      contactPoint: {
        "@type": "ContactPoint",
        telephone: "+971 52 2345 572",
        contactType: "Customer Service",
        areaServed: "AE",
        availableLanguage: "English",
      },
      address: {
        "@type": "PostalAddress",
        streetAddress: "Al Muhaisnah 2, Dubai",
        addressLocality: "Dubai",
        addressCountry: "UAE",
      },
    },
    {
      "@type": "WebSite",
      "@id": `${Astro.url.origin}/#website`,
      url: Astro.url.origin,
      name: "Travel Platform UAE",
      description: description,
      publisher: { "@id": `${Astro.url.origin}/#organization` },
      inLanguage: "en-US",
    },
    {
      "@type": "BreadcrumbList",
      "@id": `${Astro.url.origin}/about/#breadcrumb`,
      itemListElement: [
        {
          "@type": "ListItem",
          position: 1,
          item: {
            "@id": `${Astro.url.origin}/`,
            name: "Home",
          },
        },
        {
          "@type": "ListItem",
          position: 2,
          item: {
            "@id": `${Astro.url.origin}/about`,
            name: "About Us",
          },
        },
      ],
    },
    {
      "@type": "WebPage",
      "@id": `${Astro.url.origin}/about/#webpage`,
      url: `${Astro.url.origin}/about`,
      name: title,
      datePublished: new Date().toISOString(),
      dateModified: new Date().toISOString(),
      about: { "@id": `${Astro.url.origin}/#organization` },
      isPartOf: { "@id": `${Astro.url.origin}/#website` },
      primaryImageOfPage: {
        "@id": logo.src,
      },
      inLanguage: "en-US",
    },
  ],
};
---

<Layout title={title} description={description} structuredData={structuredData}>
  <div class="relative h-[45vh] sm:h-[45vh] md:h-[60vh] bg-gradient-to-r from-blue-900 via-purple-900 to-blue-900 overflow-hidden">
    <div class="absolute inset-0 transform-gpu" style="transform: translateY(var(--scrollY))">
      <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/70"></div>
      <img class="w-full h-full object-cover opacity-40 scale-110" src={image1.src} alt="About Us" />
    </div>
    <div class="relative h-full flex items-center justify-center">
      <div class="text-center space-y-6 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl sm:text-5xl md:text-7xl font-black text-white tracking-tight animate-fade-in">
          About <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">Us</span>
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-gray-200 max-w-3xl mx-auto animate-fade-in-up">
          Innovative solutions for modern travel challenges
        </p>
      </div>
    </div>
  </div>
  <Header />
  <Visionmission />
  <JoinUs />
</Layout>