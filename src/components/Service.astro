---
import { Image } from 'astro:assets';
import type { CollectionEntry } from "astro:content";

interface Props {
  serviceEntry: CollectionEntry<"services">;
}

const { serviceEntry } = Astro.props;
const { title, description, cardImage, } = serviceEntry.data;
---

<div class="relative border border-gray-200 rounded-lg overflow-hidden shadow-md transition-transform duration-300 hover:-translate-y-1 bg-white">
  <!-- Image Section -->
  <Image
    src={cardImage}
    alt={title}
    class="w-full h-48 object-cover rounded-t-lg"
  />
  
  <!-- Card Content -->
  <div class="p-4 text-center">
    <h3 class="text-lg font-bold text-gray-900">{title}</h3>
    <!-- {description && <p class="text-sm text-gray-600 mt-1">{description}</p>} -->
  </div>

  <!-- View Details (Always Visible) -->
  <div class="p-4 text-center border-t border-gray-200">
    <a
      href={`/services/${serviceEntry.slug}/`}
      class="text-yellow-500 font-semibold flex items-center justify-center gap-1"
    >
      View Details
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </a>
  </div>
</div>