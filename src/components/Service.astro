---
import { Image } from 'astro:assets';
import type { CollectionEntry } from "astro:content";

interface Props {
  serviceEntry: CollectionEntry<"services">;
}

const { serviceEntry } = Astro.props;
const { title, description, cardImage, } = serviceEntry.data;
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": serviceEntry.data.title,
  "description": serviceEntry.data.description ,
  "image": {
    "@type": "ImageObject",
    "contentUrl": "https://travelplatformuae.com" + serviceEntry.data.cardImage.src,
    "creditText": `Travel Platform UAE - ${serviceEntry.data.title}`,
    "creator": {
      "@type": "Organization",
      "name": "Travel Platform UAE"
    },
    "width": 800,
    "height": 600
  },
  "offers": {
    "@type": "Offer",
    "priceCurrency": "USD",
    "price": serviceEntry.data.price,
    "priceValidUntil": new Date(new Date().setFullYear(new Date().getFullYear() + 1)).toISOString().split('T')[0],
    "availability": "https://schema.org/InStock",
    "seller": {
      "@type": "Organization",
      "name": "Travel Platform UAE",
      "url": "https://travelplatformuae.com"
    }
  },
 "aggregateRating": serviceEntry.data.rating && serviceEntry.data.reviewCount ? {
    "@type": "AggregateRating",
    "ratingValue": serviceEntry.data.rating.toFixed(1),
    "reviewCount": serviceEntry.data.reviewCount,
    "bestRating": 5,
    "worstRating": 1
  } : undefined,
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://travelplatformuae.com" 
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Services",
        "item": "https://travelplatformuae.com/services"
      },
    ]
  }

};
---
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
<div class="relative border border-gray-200 rounded-lg overflow-hidden shadow-md transition-transform duration-300 hover:-translate-y-1 bg-white">
  <!-- Image Section -->
  <Image
    src={cardImage}
    alt={title}
    class="w-full h-48 object-cover rounded-t-lg"
  />
  
  <!-- Card Content -->
  <div class="p-4 text-center">
    <h3 class="text-lg font-bold text-gray-900">{title}</h3>
    <!-- {description && <p class="text-sm text-gray-600 mt-1">{description}</p>} -->
  </div>

  <!-- View Details (Always Visible) -->
  <div class="p-4 text-center border-t border-gray-200">
    <a
      href={`/services/${serviceEntry.slug}/`}
      class="text-yellow-500 font-semibold flex items-center justify-center gap-1"
    >
      View Details
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </a>
  </div>
</div>