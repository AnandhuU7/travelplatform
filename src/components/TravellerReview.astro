---
import { Image } from 'astro:assets';
import image1 from '/src/assets/testi/testi1.png';
import image2 from '/src/assets/testi/testi2.png';
import image3 from '/src/assets/testi/testi3.png';

const testimonials = [
  {
    id: 1,
    name: "Arun Manoj",
    designation: "Adventure Enthusiast",
    review: "Absolutely magical experience! The personalized itinerary crafted by travelplatform transformed my dream vacation into reality. From hidden gems to luxury stays, every moment was picture-perfect.",
    image: image1,
    location: "Explored Bali, Indonesia"
  },
  {
    id: 2,
    name: "M Samuels",
    designation: "Travel Blogger",
    review: "Mind-blowing service! Their attention to detail and local expertise made my solo trip extraordinary. The cultural experiences they arranged were authentic and unforgettable.",
    image: image2,
    location: "Toured Japan"
  },
  {
    id: 3,
    name: "Sarah Williams",
    designation: "Photography Expert",
    review: "Perfect planning! Every sunset location, every restaurant recommendation was spot on. They truly understand what modern travelers want. Can't wait for my next adventure with them!",
    image: image3,
    location: "Visited Santorini, Greece"
  },
  {
    id: 4,
    name: "Raj Malhotra",
    designation: "Family Traveler",
    review: "Outstanding family experience! They planned activities that kept both kids and adults entertained. The seamless coordination and 24/7 support made our trip stress-free.",
    image: image1,
    location: "Family Trip to Switzerland"
  }
];
---

<section class="py-5 bg-gradient-to-b from-gray-50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
        Traveler Stories
      </h2>
      <p class="mt-4 text-xl text-gray-600">Memories that last a lifetime</p>
    </div>

    <div class="mt-12 relative">
      <div class="testimonial-slider overflow-hidden relative">
        <!-- Navigation Arrows - Only visible on mobile -->
        <button class="nav-arrow prev-arrow md:hidden absolute left-2 top-1/2 -translate-y-1/2 z-10 bg-white/90 hover:bg-white rounded-full p-2 shadow-lg border border-gray-100">
          <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        <button class="nav-arrow next-arrow md:hidden absolute right-2 top-1/2 -translate-y-1/2 z-10 bg-white/90 hover:bg-white rounded-full p-2 shadow-lg border border-gray-100">
          <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>

        <div class="flex transition-transform duration-700 ease-out">
          <!-- Dynamically generated testimonial content -->
          {
            [...testimonials, ...testimonials].map((testimonial) => (
              <div class="min-w-full p-4 transform transition-all duration-300 hover:scale-105 md:min-w-[50%] lg:min-w-[33.333%]">
                <div class="bg-white rounded-2xl shadow-xl p-8 h-full relative border border-gray-100 hover:border-blue-200">
                  <div class="absolute -top-4 right-8">
                    <div class="bg-blue-600 text-white px-4 py-1 rounded-full text-sm">
                      {testimonial.location}
                    </div>
                  </div>

                  <div class="flex items-center mb-6">
                    <div class="relative">
                      <img
                        src={testimonial.image.src}
                        alt={testimonial.name}
                        class="w-16 h-16 rounded-full object-cover border-4 border-white shadow-lg"
                      />
                      <div class="absolute -bottom-2 -right-2 bg-green-500 rounded-full p-1.5 border-2 border-white">
                        <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4">
                      <h3 class="font-bold text-gray-900">{testimonial.name}</h3>
                      <p class="text-sm text-blue-600 font-medium">{testimonial.designation}</p>
                    </div>
                  </div>

                  <p class="text-gray-700 leading-relaxed font-medium">
                    {testimonial.review}
                  </p>

                  <div class="mt-6 flex items-center text-gray-500 text-sm">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"/>
                    </svg>
                    Verified Trip
                  </div>

                  <div class="mt-4 flex space-x-1">
                    {[...Array(5)].map((_, index) => (
                      <svg class={`w-5 h-5 ${['text-red-500', 'text-blue-500', 'text-green-500', 'text-yellow-500', 'text-violet-500'][index]}`} fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                    ))}
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slider = document.querySelector('.testimonial-slider .flex');
    const slides = document.querySelectorAll('.testimonial-slider .flex > div');
    const prevButton = document.querySelector('.prev-arrow');
    const nextButton = document.querySelector('.next-arrow');
    
    if (!slider || !slides.length) return;

    function getSlideWidth() {
      const containerWidth = slider?.parentElement?.offsetWidth ?? 0;
      if (window.innerWidth < 768) {
        return containerWidth;
      } else if (window.innerWidth < 1024) {
        return containerWidth / 2;
      } else {
        return containerWidth / 3;
      }
    }

    let currentPosition = 0;
    let slideWidth = getSlideWidth();
    let autoSlideInterval: number | undefined;

    window.addEventListener('resize', () => {
      slideWidth = getSlideWidth();
      moveToSlide(Math.floor(currentPosition / slideWidth));
    });

    function moveToSlide(index: number) {
      currentPosition = -index * slideWidth;
      if (currentPosition <= -(slides.length * slideWidth) / 2) {
        currentPosition = 0;
      }
      if (currentPosition > 0) {
        currentPosition = -(slides.length * slideWidth) / 2 + slideWidth;
      }
      if (slider) {
        (slider as HTMLElement).style.transform = `translateX(${currentPosition}px)`;
      }
    }

    function startAutoSlide() {
      stopAutoSlide();
      autoSlideInterval = setInterval(() => {
        moveToSlide(Math.floor(currentPosition / -slideWidth) + 1);
      }, 3000);
    }

    function stopAutoSlide() {
      if (autoSlideInterval) {
        clearInterval(autoSlideInterval);
      }
    }

    // Navigation button handlers
    prevButton?.addEventListener('click', () => {
      moveToSlide(Math.floor(currentPosition / -slideWidth) - 1);
      stopAutoSlide();
      startAutoSlide();
    });

    nextButton?.addEventListener('click', () => {
      moveToSlide(Math.floor(currentPosition / -slideWidth) + 1);
      stopAutoSlide();
      startAutoSlide();
    });

    slider.addEventListener('mouseenter', stopAutoSlide);
    slider.addEventListener('mouseleave', startAutoSlide);

    // Initialize auto-slide
    startAutoSlide();
  });
</script>

<style>
  .testimonial-slider {
    position: relative;
    overflow: hidden;
    padding: 1rem 0;
  }

  .testimonial-slider div > div {
    backface-visibility: hidden;
    -webkit-font-smoothing: antialiased;
  }

  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-5px); }
    100% { transform: translateY(0px); }
  }

  .testimonial-slider div > div:hover {
    animation: float 3s ease-in-out infinite;
  }

  .testimonial-slider .flex {
    transform: translateX(0);
    transition: transform 0.5s ease-in-out;
  }

  .nav-arrow {
    transition: all 0.3s ease;
  }

  .nav-arrow:hover {
    transform: translateY(-50%) scale(1.1);
  }

  .nav-arrow:active {
    transform: translateY(-50%) scale(0.95);
  }
</style>
