---
import image1 from "/src/assets/serviceimg/service30.jpg";
import image2 from "/src/assets/serviceimg/service20.jpg";
import image3 from "/src/assets/serviceimg/service24.jpg";
import image4 from "/src/assets/serviceimg/service21.jpg";
import image5 from "/src/assets/serviceimg/service31.jpg";
import image6 from "/src/assets/serviceimg/service27.jpg";
import image7 from "/src/assets/serviceimg/service33.png"

const servicesData = [
  {
    image: image7,
    text: "2 Year UAE VISA",
    route: "/services/post-14",
    price: 100,
  },
  {
    image: image1,
    text: "B2B Booking Solutions for Travel Agencies and Corporate Entities",
    route: "/services/post-11",
    price: 100,
  },
  {
    image: image2,
    text: "Global Visa Platform",
    route: "/services/post-1",
    price: 100,
  },
  {
    image: image3,
    text: "Umrah Assistance: 10 days Package By Road",
    route: "/services/post-5",
    price: 100,
  },
  {
    image: image4,
    text: "Visa Change by Flight",
    route: "/services/post-2",
    price: 100,
  },
  // {
  //   image: image5,
  //   text: "Family Visa",
  //   route: "/services/post-12",
  //   price: 100,
  // },
  {
    image: image6,
    text: "Golden Visa Assistance",
    route: "/services/post-8",
    price: 100,
  },
];
const structuredData = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  breadcrumb: {
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        name: "Home",
        item: "https://travelplatformuae.com",
      },
    ],
  },
  itemListElement: servicesData.map((service, index) => ({
    "@type": "ListItem",
    position: index + 1,
    item: {
      "@type": ["Product", "Service"],
      name: service.text,
      description: `Professional ${service.text} services by Travel Platform UAE`,
      url: `https://travelplatformuae.com${service.route}`,
      offers: {
        "@type": "Offer",
        availability: "https://schema.org/InStock",
        priceCurrency: "AED",
        price: service.price, 
        category: "Travel Services",
      },
      image: {
        "@type": "ImageObject",
        url: `https://travelplatformuae.com${service.image.src}`,
        width: 800,
        height: 600,
        caption: service.text,
      },
      serviceType: service.text.includes("Global")
        ? "Global Visa Platform"
        : service.text.includes("Family")
          ? "Family Visa"
          : service.text.includes("Golden")
            ? "Golden Visa Assistance"
            : service.text.includes("Umrah")
              ? "Umrah Assistance"
              : service.text.includes("B2B")
                ? "B2B Booking Solutions for Travel Agencies"
                : service.text.includes("Flight")
                  ? "Visa Change by Flight"
                  : "Travel Services",
    },
  })),
  provider: {
    "@type": "Organization",
    name: "Travel Platform UAE",
    url: "https://travelplatformuae.com",
  },
};
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
<div class="text-center p-0 md:p-8">
  <h2
    class="text-4xl font-bold mb-4 mt-10 md:mt-0 text-center bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"
  >
    Our Services
  </h2>
  <p
    class="mb-8 text-[#666666] px-4 md:px-0 text-sm md:text-base leading-relaxed"
    style="font-family: 'Poppins', sans-serif;"
  >
    As one of the top travel agencies in Dubai, we specialize in luxury travel
    experiences, visa assistance, hotel bookings,<br
      class="hidden md:block"
    />and exciting adventure tours with local tour operators. Our goal is to
    make sure your journey is smooth and truly unforgettable.
  </p>

  <!-- Changed gap-0 to gap-6 for mobile view, added px-4 for better spacing -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 px-4 md:px-8">
    {
      servicesData.map((service, index) => (
        <Fragment key={index}>
          <div class="relative border border-gray-200 rounded-lg overflow-hidden shadow-md transition-transform duration-300 hover:-translate-y-1 bg-white p-4 text-center flex flex-col justify-between w-full mb-2 md:mb-0">
            <img
              src={service.image.src}
              alt={`Service ${index + 1}`}
              class="w-full h-48 object-cover rounded-lg mb-4"
            />
            <p class="mb-4 font-bold text-gray-600">{service.text}</p>
            <a
              href={service.route}
              class="bg-white text-yellow-500 py-2.5 px-2 text-sm rounded-full hover:bg-yellow-400 border-2 border-yellow-500 hover:text-white flex items-center justify-center w-32 mx-auto"
            >
              View Details
              <svg
                class="ml-2 w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        </Fragment>
      ))
    }
  </div>

  <div class="mt-10 mb-6 md:mb-2">
    <a
      href="/services"
      class="bg-blue-500 text-white py-4 px-8 rounded-full hover:bg-blue-700"
    >
      View More
    </a>
  </div>
</div>
