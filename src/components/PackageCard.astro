---
import { Image } from 'astro:assets';

interface Props {
  packageData: {
    data: {
      title: string;
      description?: string;
      cardImage: ImageMetadata;
      price: number;
    };
    slug: string;
  };
}

const { packageData } = Astro.props;
const { title, description, cardImage, price } = packageData.data;
---

<div class="relative border border-gray-200 rounded-lg overflow-hidden shadow-md transition-transform duration-300 hover:-translate-y-1 bg-white">
  <!-- Image Section -->
  <Image
    src={cardImage}
    alt={title}
    class="w-full h-48 object-cover rounded-t-lg"
  />

  <!-- Card Content -->
  <div class="p-4 text-center">
    <h3 class="text-lg font-bold text-gray-900">{title}</h3>
    {description && <p class="text-sm text-gray-600 mt-1">{description}</p>}
  </div>

  <!-- View Details (Always Visible) -->
  <div class="p-4 text-center border-t border-gray-200">
    <a
      href={`/packages/${packageData.slug}`}
      class="text-yellow-500 font-semibold flex items-center justify-center gap-1"
    >
      View Details
    </a>
  </div>
</div>
