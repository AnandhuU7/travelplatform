---
// ScrollProgress Component
---

<div class="fixed top-0 left-0 w-full h-1 z-50 bg-transparent">
    <div 
      id="scroll-progress" 
      class="h-full bg-gradient-to-r from-yellow-400 to-yellow-600 origin-left"
    ></div>
  </div>
  
  <script>
    function updateScrollProgress() {
      const scrollProgress = document.getElementById('scroll-progress');
      if (!scrollProgress) return;
  
      const scrollPx = document.documentElement.scrollTop;
      const winHeightPx = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      const progress = scrollPx / winHeightPx * 100;
  
      scrollProgress.style.transform = `scaleX(${progress / 100})`;
    }
  
    // Initialize progress to 0 on page load
    window.addEventListener('load', () => {
      const scrollProgress = document.getElementById('scroll-progress');
      if (scrollProgress) {
        scrollProgress.style.transform = 'scaleX(0)';
      }
    });
  
    window.addEventListener('scroll', updateScrollProgress);
  </script>
  
  <style>
    #scroll-progress {
      transform-origin: left;
      transition: transform 0.2s ease;
    }
  </style> 